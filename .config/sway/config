# Screen brightness controls
# bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
# bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"
bindsym XF86MonBrightnessUp exec --no-startup-id 'brightnessctl -d gmux_backlight set +5%; $HOME/bin/brightnessnotify gmux_backlight "Screen"'
bindsym XF86MonBrightnessDown exec --no-startup-id 'brightnessctl -d gmux_backlight set 5%-; $HOME/bin/brightnessnotify gmux_backlight "Screen"'

# Keyboard backlight controls
bindsym XF86KbdBrightnessUp exec --no-startup-id 'brightnessctl -d smc::kbd_backlight set +5%; $HOME/bin/brightnessnotify smc::kbd_backlight "Keyboard"'
bindsym XF86KbdBrightnessDown exec --no-startup-id 'brightnessctl -d smc::kbd_backlight set 5%-; $HOME/bin/brightnessnotify smc::kbd_backlight "Keyboard"'

# Pulse Audio controls
