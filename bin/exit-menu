#!/bin/sh
while [ "$select" != "Cancel" -a "$select" != "Suspend" -a "$select" != "Hibernate"  -a "$select" != "Logout"  -a "$select" != "Reboot"  -a "$select" != "Shutdown"  ]; do
    select=$(echo -e 'Suspend\nHibernate\nLogout\nReboot\nShutdown\nCancel' | rofi -dmenu -p "Leave" -theme flat-orange-ribbon.rasi) 
    [ -z "$select" ] && exit 0
done
[ "$select" = "Cancel" ] && exit 0
[ "$select" = "Suspend" ] && swayexit suspend
[ "$select" = "Hibernate" ] && swayexit hibernate
[ "$select" = "Logout" ] && swayexit logout
[ "$select" = "Reboot" ] && swayexit reboot
[ "$select" = "Shutdown" ] && swayexit shutdown
exit 0
